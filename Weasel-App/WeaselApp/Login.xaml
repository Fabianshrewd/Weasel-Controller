<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WeaselApp.Settings">
    <StackLayout>
        <Label Text="IP-Adress:" />
        <Entry x:Name="IP_TextBox" />

        <Label Text="Username:" />
        <Entry x:Name="Username_TextBox" />

        <Label Text="Password:" />
        <Entry x:Name="Password_TextBox" IsPassword="True"/>
        <Button Text="Set Credentials!" Clicked="SetCredentials" />
    </StackLayout>
</ContentPage>