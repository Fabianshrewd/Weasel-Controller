<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WeaselApp.MainPage">

    <StackLayout>
        <Label Text="Enter Weasel Name:" />
        <Entry x:Name="txtBox_WeaselName" />
        <Label Text="Enter next position:" />
        <Entry x:Name="PositionToSendTo" />
        <Button Text="Send Weasel!" Clicked="SendWeaselToPosition" />
        <ScrollView>
            <StackLayout>
                <Image Source="WeaselMap" Aspect="AspectFit" />
            </StackLayout>
        </ScrollView>
    </StackLayout>
</ContentPage>
